<div class="jumbotron jumbotron-fluid text-center">
  <div class="container">
  <% if params[:first_name].present? %>
  <h1 class="display-4">Bienvenue <%= params[:first_name] %> !</h1>
  <p class="lead">Ceci est la page d'accueil de notre site de gossips 🗣️ </p>
  <% else %>
    <h1 class="display-4">Bienvenue sur The Gossip Project!</h1>
    <p class="lead">Ceci est la page d'accueil de notre site de gossips 🗣️ </p>
    <% end %>
    <!-- Ajout de l'image du logo -->
    <img src="<%= asset_path('the_gossip_project.png') %>" alt="Logo TGP">
  </div>
</div>

<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
    </div>
<% end %>

<% if flash.notice %>
  <div class="alert alert-success" role="alert">
    <%= flash.notice %>
  </div>
<% end %>

<div class="text-center bg-light p-3 mx-auto"> <!-- classe mx-auto = centrer horizontalement -->
  <h1>Liste des potins</h1>
</div>

<div class="row">
  <% @gossips.each do |gossip| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= gossip.title %></h5>
          <p class="card-text">Auteur: <%= gossip.user.first_name %></p>
          <%= link_to "Voir le potin", gossip_path(gossip), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Créer un nouveau potin", new_gossip_path, class: "btn btn-success" %>



